            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prerequisite" class="control-label"></label>
                <input asp-for="Prerequisite" class="form-control" />
                <span asp-validation-for="Prerequisite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseWork" class="control-label"></label>
                <input asp-for="CourseWork" class="form-control" />
                <span asp-validation-for="CourseWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TermExams" class="control-label"></label>
