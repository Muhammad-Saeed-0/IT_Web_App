                <span asp-validation-for="TermExams" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinalExam" class="control-label"></label>
                <input asp-for="FinalExam" class="form-control" />
                <span asp-validation-for="FinalExam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OralPractical" class="control-label"></label>
