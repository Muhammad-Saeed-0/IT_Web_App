@model webApp.Models.RequirementCourse

@{
    ViewData["Title"] = "Create Requirement Course";
}

<h1>Create Regulation Course</h1>
 
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseCode" class="control-label"></label>
                <select asp-for="CourseCode" class ="form-control" asp-items="ViewBag.CourseCode"></select>
            </div>
            <div class="form-group">
                <label asp-for="RequirementId" class="control-label"></label>
                <select asp-for="RequirementId" class ="form-control" asp-items="ViewBag.RegulationId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompulsory" /> @Html.DisplayNameFor(model => model.IsCompulsory)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
