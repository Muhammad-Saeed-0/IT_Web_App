@model webApp.Models.RequirementCourse

@{
    ViewData["Title"] = "Edit Requirement Course";
}

<h1>Edit Requirement Course</h1>
 
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseCode" />
            <input type="hidden" asp-for="RequirementId" />
            <div class="form-group form-check">

                <label class="form-label">
                     @Html.DisplayNameFor(model => model.Course.CourseTitle)
                </label>
                <input class="form-control" value="@Model.Course.CourseTitle" disabled />
                <br/>
                <label class="form-label">
                    @Html.DisplayNameFor(model => model.Requirement.Title)
                </label>
                <input class="form-control" value="@Model.Requirement.Title" disabled />
                <br />

                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompulsory" /> @Html.DisplayNameFor(model => model.IsCompulsory)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
