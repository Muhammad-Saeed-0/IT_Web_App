@model ProgramCourse

@{
    ViewData["Title"] = "Create";
}

<h1>Create Program Course</h1>
 
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseCode" class="control-label"></label>
                <select asp-for="CourseCode" class ="form-control" asp-items="ViewBag.CourseCode"></select>
            </div>
            <div class="form-group">
                <label asp-for="EducationalProgramId" class="control-label"></label>
                <select asp-for="EducationalProgramId" class="form-control" asp-items="ViewBag.EducationalProgramId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompulsory" /> @Html.DisplayNameFor(model => model.IsCompulsory)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
