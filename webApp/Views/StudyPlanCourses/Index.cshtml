@model IEnumerable<webApp.Models.StudyPlanCourse>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SemesterOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterTwo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudyPlan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterOne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterTwo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudyPlan.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseTitle)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { studyPlanId = item.StudyPlanId, courseCode = item.CourseCode }) |
                    @Html.ActionLink("Details", "Details", new { studyPlanId = item.StudyPlanId, courseCode = item.CourseCode }) |
                    @Html.ActionLink("Delete", "Delete", new { studyPlanId = item.StudyPlanId, courseCode = item.CourseCode })
            </td>
        </tr>
}
    </tbody>
</table>
